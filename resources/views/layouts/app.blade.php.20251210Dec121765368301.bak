<!-- Theme Toggle Script - INTEGRATED WITH YOUR STYLE-GUIDE -->
<script>
    // Initialize theme on load
    function initializeTheme() {
        const savedTheme = localStorage.getItem('flux.appearance') ||
            localStorage.getItem('flux:appearance') ||
            localStorage.getItem('theme') ||
            'light';

        document.documentElement.setAttribute('data-bs-theme', savedTheme);
        updateThemeIcon(savedTheme);

        // Also set .dark class for Tailwind components like footer
        if (savedTheme === 'dark') {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    }

    function toggleTheme() {
        const currentTheme = document.documentElement.getAttribute('data-bs-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

        // Update Bootstrap theme
        document.documentElement.setAttribute('data-bs-theme', newTheme);

        // Update for Tailwind (.dark class)
        if (newTheme === 'dark') {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }

        // Save to all storage keys for compatibility
        localStorage.setItem('theme', newTheme);
        localStorage.setItem('flux:appearance', newTheme);
        localStorage.setItem('flux.appearance', newTheme);

        updateThemeIcon(newTheme);
    }

    function updateThemeIcon(theme) {
        const icon = document.getElementById('themeIcon');
        if (icon) {
            if (theme === 'dark') {
                // Change to YELLOW sun icon for dark mode
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
                icon.style.color = '#fbbf24'; // Sun yellow
            } else {
                // Change to moon icon for light mode
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
                // Color will be set by CSS based on theme
            }
        }
    }

    // Initialize theme when page loads
    document.addEventListener('DOMContentLoaded', initializeTheme);
</script>

